<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.greenbot.technologies.numcodes.MainActivity$PlaceholderFragment"
    android:background="#9933CC"
    android:clickable="false">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fragment_text_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffaa66cc"
        android:textColor="#9933CC"
        android:padding="@dimen/grid_card_padding_bottom"
        android:gravity="center"
        android:text="k"
        android:singleLine="false"
        android:textStyle="bold|italic" />

    <!--<view-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--class="it.gmariotti.cardslib.library.view.CardView"-->
    <!--android:id="@+id/card_view"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_below="@+id/section_label" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33B5E5"
        android:clickable="false"
        android:layout_above="@+id/section_label"
        android:layout_alignLeft="@+id/section_label"
        android:layout_alignStart="@+id/section_label">

        <!-- You can customize this layout.
         You need to have in your layout a `CardView` with the ID `list_cardId` -->
        <it.gmariotti.cardslib.library.view.CardListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mylist"
            card:list_card_layout_resourceID="@layout/list_card_thumbnail_layout"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>
</RelativeLayout>
